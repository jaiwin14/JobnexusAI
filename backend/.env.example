# Example env for backend (do NOT commit real secrets here)
# Copy this file to .env and fill in real values locally only.

# Server
PORT=5000

# MongoDB - Atlas connection string
MONGODB_URI=mongodb+srv://<dbUser>:<password>@cluster0.mongodb.net/jobnexus?retryWrites=true&w=majority

# JWT secret used for auth tokens
JWT_SECRET=your_jwt_secret_here

# Frontend origins for CORS (comma-separated)
FRONTEND_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173

# API Keys
GOOGLE_API_KEY=your_google_api_key
RAPIDAPI_KEY=your_rapidapi_key

# Optional: Adzuna credentials
ADZUNA_APP_ID=your_adzuna_app_id
ADZUNA_APP_KEY=your_adzuna_app_key
